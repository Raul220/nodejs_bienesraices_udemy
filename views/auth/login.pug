extends ../layout/index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
    div
        h2.text-center.text-2xl.font-extrabold= page

        if errors
            div(class="max-w-md mx-auto my-10")
                each error in errors
                    p.bg-red-600.text-white.uppercase.text-xs.text-center.p-2.mb-1.font-bold= error.msg
        
        .mt-8.mx-auto.max-w-md
            .bg-white.py-8.px-4.shadow
                form.space-y-5(method="POST")
                    input(type="hidden" name="_csrf" value= csrfToken)
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="email") Correo
                        input#email.w-full.py-2.px-3.border.border-gray-300.rounded-md.placehoder-gray-400(placeholder= 'Correo' type='email' name='email') 
                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="password") Contraseña
                        input#password.w-full.py-2.px-3.border.border-gray-300.rounded-md.placehoder-gray-400(placeholder= 'Contraseña' type='password' name='password')  
                    div.flex.items-center.justify-between
                        a.text-gray-500.text-xs(href="/auth/registry") ¿No tienes cuenta? Registrate
                        a.text-gray-500.text-xs(href="/auth/forgot-password") ¿Olvidaste tu contraseña?
                    input(type="submit" value="Iniciar sesión" class='w-full bg-indigo-600 py-3 rounded-md font-bold hover:bg-indigo-700 cursor-pointer text-white')