extends ../layout/index

block content
    div.py-10
        h1.text-4xl.my-10.font-extrabold.text-center Bienes
            span.font-normal Raices
        h2.text-center.text-2xl.font-extrabold= page

        div(class="bg-white shadow py-8 px-4 rounded mx-auto max-w-4xl my-10 md:px-10")
            form.space-y-8
                div.space-y-5
                    h3.text-lg.leading-6.font-medium.text-gray-900 Información general
                    p.text-gray-600 Añade información sobre la propiedad en venta

                    div
                        label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="title") Título de anuncio
                        input#title.w-full.py-2.px-3.border.border-gray-300.rounded-md.placehoder-gray-400(placeholder= 'Título propiedad, ej. Casa en la playa' type='text' name='title') 

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                    
                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="category") Categoría
                            select#category.w-full.py-2.px-3.border.border-gray-300.rounded-md.placehoder-gray-400(name='category')
                                option(value="") - Seleccione -  

                        div(class="md:w-1/2")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="price") Precio
                            select#price.w-full.py-2.px-3.border.border-gray-300.rounded-md.placehoder-gray-400(name='price')
                                option(value="") - Seleccione -  

                    div(class="md:flex md:gap-4 space-y-5 md:space-y-0")
                    
                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="bedrooms") Habitaciones
                            select#bedrooms.w-full.py-2.px-3.border.border-gray-300.rounded-md.placehoder-gray-400(name='bedrooms')
                                option(value="") - Seleccione -  
                                - var n = 1;
                                    while n < 10
                                        option(value=n) #{n++} 

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="parking") Estacionamiento
                            select#parking.w-full.py-2.px-3.border.border-gray-300.rounded-md.placehoder-gray-400(name='parking')
                                option(value="") - Seleccione -   
                                - var n = 1;
                                    while n < 4
                                        option(value=n) #{n++} 

                        div(class="md:w-1/3")
                            label.block.text-sm.uppercase.text-gray-500.mb-3.font-bold(for="bathroom") Baños
                            select#bathrooms.w-full.py-2.px-3.border.border-gray-300.rounded-md.placehoder-gray-400(name='price')
                                option(value="") - Seleccione -   
                                - var n = 1;
                                    while n < 10
                                        option(value=n) #{n++} 